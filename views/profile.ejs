<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>My Budget App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="container my-5">

        <div class="d-flex justify-content-between align-items-center mb-4">
            <!-- Header -->
            <h1 class="text-primary fw-bold">My Personal Budget</h1>
            <a href="/logout" class="btn btn-default btn-sm">Logout</a>
        </div>

        <div class="row">

            <!-- LOCAL INFORMATION -->
            <div class="col-sm-6">
                <div class="card shadow-sm border-0 mb-4">
                    <h3 class="text-primary"><span class="fa fa-user"></span> Hello, <%= user.local.email %>!</h3>

                    <% if (user.local.email) { %>
                        <p class="mt-3">

                            <strong>email</strong>: <%= user.local.email %><br>

                        </p>

                        <a href="/unlink/local" class="btn btn-primary">Unlink</a>
                        <% } else { %>
                            <a href="/connect-local" class="btn btn-primary">Connect Local</a>
                            <% } %>

                </div>
            </div>

            <!-- budget section -->
            <div class="col-sm-6">
                <h3 class="text-primary">My Budget(s)</h3>
                <ul class="messages list-group mt-3">
                    <% for(var i=0; i<messages.length; i++) {%>
                        <li class="message list-group-item d-flex justify-content-between align-items-center">
                            <span class="originalCategory fw-bold">
                                <%= messages[i].name %>
                            </span>
                            <span class="originalAmount">
                                <%= messages[i].amount %>
                            </span>
                            <span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                            <div>
                                <button class="editBtn btn btn-primary">Edit</button>

                                <form class="editForm" style="display: none;">
                                    <input type="text" name="newName" class="newName" placeholder="Category...">
                                    <input type="number" name="newAmount" class="newAmount" placeholder="Amount...">
                                    <button type="submit" class="btn btn-success btn-sm editSubmitBtn">Submit</button>
                                </form>
                            </div>
                        </li>
                        <% } %>
                </ul>
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h3 class="text-primary">Create a New Budget</h3>
                        <form action="/messages" method="POST" class="mt-3">
                            <div class="mb-3">
                                <input type="text" class="form-control" name="name" placeholder="Category">
                            </div>
                            <div class="mb-3">
                                <input type="number" class="form-control" name="amount" placeholder="Amount">
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="main.js"></script>

</body>

</html>